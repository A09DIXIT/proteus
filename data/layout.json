{
  "type": "RecyclerView",
  "layout_width": "match_parent",
  "layout_height": "320dp",
  "layout_gravity": "center",
  "background": "#efefef",
  "data": {
    "items": "@{data.achievements}"
  },
  "adapter": {
    "@": {
      "item-count": "@{items.$length}",
      "item-layout": {
        "type": "TextView",
        "data": {
          "item": "@{items[$index]}"
        },
        "layout_width": "match_parent",
        "layout_height": "64dp",
        "layout_marginBottom": "4dp",
        "gravity": "center",
        "text": "@{item}",
        "textSize": "14sp",
        "textColor": "#323232"
      }
    }
  }
}