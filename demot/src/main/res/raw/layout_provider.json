{
  "RelativeLayoutExample": {
    "type": "FrameLayout",
    "layout_width": "match_parent",
    "layout_height": "wrap_content",
    "children": [
      {
        "type": "RelativeLayout",
        "layout_width": "match_parent",
        "layout_height": "100dp",
        "background": "#ffffff",
        "children": [
          {
            "type": "TextView",
            "id": "center",
            "layout_width": "wrap_content",
            "layout_height": "wrap_content",
            "text": "Center",
            "textColor": "#323232",
            "textSize": "14sp",
            "layout_centerVertical": "true",
            "layout_centerHorizontal": "true"
          },
          {
            "type": "ImageView",
            "src": "@drawable/star_filled",
            "layout_marginBottom": "4dp",
            "layout_above": "center",
            "layout_centerHorizontal": "true"
          },
          {
            "type": "ImageView",
            "src": "@drawable/star_filled",
            "layout_marginTop": "4dp",
            "layout_below": "center",
            "layout_centerHorizontal": "true"
          },
          {
            "type": "ImageView",
            "src": "@drawable/star_filled",
            "layout_marginLeft": "4dp",
            "layout_toRightOf": "center",
            "layout_centerVertical": "true"
          },
          {
            "type": "ImageView",
            "src": "@drawable/star_filled",
            "layout_marginRight": "4dp",
            "layout_toLeftOf": "center",
            "layout_centerVertical": "true"
          },
          {
            "type": "ImageView",
            "src": "http://img6a.flixcart.com/www/prod/images/flipkart_logo_retina-9fddfff2.png",
            "layout_height": "50dp",
            "layout_width": "100dp",
            "padding": "8dp",
            "background": "#027cd5",
            "scaleType": "fitCenter",
            "layout_alignParentTop": "true",
            "layout_alignParentRight": "true"
          }
        ]
      }
    ]
  },
  "SimpleDataBindingExample": {
    "type": "FrameLayout",
    "layout_width": "match_parent",
    "layout_height": "wrap_content",
    "children": [
      {
        "type": "LinearLayout",
        "orientation": "vertical",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "background": "#ffffff",
        "children": [
          {
            "type": "TextView",
            "text": "Profile",
            "style": "mini.blue",
            "layout_marginBottom": "0dp"
          },
          {
            "type": "RelativeLayout",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "padding": "16dp",
            "paddingTop": "8dp",
            "children": [
              {
                "type": "TextView",
                "layout_width": "wrap_content",
                "layout_height": "wrap_content",
                "text": "$user.name",
                "id": "name",
                "layout_marginRight": "8dp"
              },
              {
                "type": "TextView",
                "text": "$user.level",
                "layout_width": "wrap_content",
                "layout_height": "wrap_content",
                "layout_toRightOf": "name"
              },
              {
                "type": "TextView",
                "layout_width": "wrap_content",
                "layout_height": "wrap_content",
                "text": "~Achievements - {{user.achievements}}/{{data.totalAchievements}}",
                "layout_marginTop": "8dp",
                "layout_below": "name"
              }
            ]
          }
        ]
      }
    ]
  }
}